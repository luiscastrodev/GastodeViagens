<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edDistancia"
        android:hint="Distância"
        android:layout_width="match_parent"
        android:textColorHint="#000000"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Total de quilômetros"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edPreco"
        android:hint="Preço"
        android:layout_width="match_parent"
        android:textColorHint="#000000"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Preço por litro"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edPrecoLitro"
        android:hint="Autonomia"
        android:layout_width="match_parent"
        android:textColorHint="#000000"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Km por litros"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"/>

    <TextView
        android:text="Seu gasto total será"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/textTotalValue"
        android:text="R$ 0"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textSize="35sp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCalculate"
        android:layout_marginTop="20dp"
        android:text="Calcular"
        android:layout_width="match_parent"
        tools:ignore="HardcodedText"
        android:layout_height="60dp"/>

</LinearLayout>